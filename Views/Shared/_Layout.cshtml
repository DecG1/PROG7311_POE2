<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agri_Energy_Connect</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Agri_Energy_Connect.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Agri_Energy_Connect</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (Context.Session.GetInt32("EmployeeId") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Employee" asp-action="EmployeeDashboard">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Employee" asp-action="AddFarmer">Add Farmer</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Employee" asp-action="ViewProducts">Farmer Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Employee" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else if (Context.Session.GetInt32("FarmerId") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Farmer" asp-action="FarmerDashboard">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Farmer" asp-action="AddProduct">Add Product</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Farmer" asp-action="ViewProducts">My Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Farmer" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>

                    @* Welcome message *@
                    <div class="d-flex align-items-center text-end">
                        @if (Context.Session.GetString("EmployeeEmail") != null)
                        {
                            <span class="me-3 text-muted">Welcome, @Context.Session.GetString("EmployeeEmail")</span>
                        }
                        else if (Context.Session.GetString("FarmerEmail") != null)
                        {
                            <span class="me-3 text-muted">Welcome, @Context.Session.GetString("FarmerEmail")</span>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
