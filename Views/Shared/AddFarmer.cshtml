@model Agri_Energy_Connect.Models.Farmer
@{
    ViewBag.Title = "Add Farmer";
}

<h2>Add New Farmer Profile</h2>

@if (ViewBag.Message != null)
{
    <div style="color: green;">@ViewBag.Message</div>
}

<form asp-action="AddFarmer" method="post">
    <div class="form-group">
        <label asp-for="FullName">Full Name</label>
        <input asp-for="FullName" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Location">Location</label>
        <input asp-for="Location" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Contact">Contact</label>
        <input asp-for="Contact" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" type="email" required />
    </div>

    <button type="submit" class="btn btn-success">Save Farmer</button>
</form>
