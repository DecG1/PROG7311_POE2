@model Agri_Energy_Connect.Models.FarmerRegistrationViewModel
@{
    ViewBag.Title = "Complete Farmer Registration";
}

<h2>Complete Your Registration</h2>

@if (ViewBag.Error != null)
{
    <div style="color: red;">@ViewBag.Error</div>
}

@if (TempData["Message"] != null)
{
    <div style="color: green;">@TempData["Message"]</div>
}

<form asp-action="RegisterFarmer" method="post">
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" type="email" required />
    </div>

    <div class="form-group">
        <label asp-for="Password">Create Password</label>
        <input asp-for="Password" class="form-control" type="password" required />
    </div>

    <button type="submit" class="btn btn-success">Register</button>
</form>

<p>Already registered? <a href="@Url.Action("FarmerLogin", "Farmer")">Login here</a></p>
