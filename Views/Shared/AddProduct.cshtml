@{
    ViewBag.Title = "Add Product";
}

<h2>Add New Product</h2>

@if (ViewBag.Message != null)
{
    <div style="color: green;">@ViewBag.Message</div>
}

<form method="post" action="@Url.Action("AddProduct", "Farmer")">

    <div class="form-group">
        <label for="ProductName">Product Name</label>
        <input type="text" name="ProductName" id="ProductName" required />
    </div>

    <div class="form-group">
        <label for="Category">Category</label>
        <select name="Category" id="Category" required>
            <option value="">-- Select Category --</option>
            <option value="Vegetables">Vegetables</option>
            <option value="Grains">Grains</option>
            <option value="Fruits">Fruits</option>
            <option value="Dairy">Dairy</option>
            <!-- Add more as needed -->
        </select>
    </div>

    <div class="form-group">
        <label for="ProductionDate">Production Date</label>
        <input type="date" name="ProductionDate" id="ProductionDate" required />
    </div>

    <button type="submit" class="btn-primary">Submit Product</button>
</form>
